<%- model_class = @observation.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @observation.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ppatch) %>:</strong></dt>
  <dd><%= @observation.ppatch %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observed_at) %>:</strong></dt>
  <dd><%= @observation.observed_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weather) %>:</strong></dt>
  <dd><%= @observation.weather %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temperature) %>:</strong></dt>
  <dd><%= @observation.temperature %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              observations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_observation_path(@observation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              observation_path(@observation),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
