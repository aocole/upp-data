<%- model_class = @pollinator_datum.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pollinator_type) %>:</strong></dt>
  <dd><%= @pollinator_datum.pollinator_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number_of_pollinators) %>:</strong></dt>
  <dd><%= @pollinator_datum.number_of_pollinators %></dd>
  <dt><strong><%= model_class.human_attribute_name(:species) %>:</strong></dt>
  <dd><%= @pollinator_datum.species %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @pollinator_datum.comments %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observation_id) %>:</strong></dt>
  <dd><%= @pollinator_datum.observation_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pollinator_data_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pollinator_datum_path(@pollinator_datum), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pollinator_datum_path(@pollinator_datum),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
