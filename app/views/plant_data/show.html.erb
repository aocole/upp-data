<%- model_class = @plant_datum.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:plant_type) %>:</strong></dt>
  <dd><%= @plant_datum.plant_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number_of_fruits) %>:</strong></dt>
  <dd><%= @plant_datum.number_of_fruits %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @plant_datum.weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:volume) %>:</strong></dt>
  <dd><%= @plant_datum.volume %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @plant_datum.comments %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observation_id) %>:</strong></dt>
  <dd><%= @plant_datum.observation_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              plant_data_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_plant_datum_path(@plant_datum), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              plant_datum_path(@plant_datum),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
